<monitor>
        <name>CoucheDBMonitor</name>
        <type>managed</type>
        <description>CoucheDB Monitor</description>
        <monitor-configuration></monitor-configuration>
        <monitor-run-task>
                <execution-style>periodic</execution-style>
                <execution-frequency-in-seconds>60</execution-frequency-in-seconds>
                <name>CoucheDB Monitor Run Task</name>
                <display-name>CoucheDB Monitor Task</display-name>
                <description>CoucheDB Monitor Task</description>
                <type>java</type>
                <execution-timeout-in-secs>60</execution-timeout-in-secs>
                <java-task>
                    <classpath>CoucheDBMonitor.jar;lib/log4j-1.2.15.jar;lib/machineagent.jar;lib/gson-2.2.2.jar</classpath>
                        <impl-class>com.appdynamics.monitors.couchedb.CoucheDBMonitor</impl-class>
                </java-task>
                <task-arguments>
                    <!-- <argument name="host" is-required="true" default-value="localhost"/>
                    <argument name="port" is-required="true" default-value="5984"/>
                    <argument name="username" is-required="true" default-value="username"/>
                    <argument name="password" is-required="true" default-value="password"/> -->
                    <argument name="hosts-config-path" is-required="false" default-value="monitors/CoucheDBMonitor/conf/HostsConfig.xml"/>
                </task-arguments>
        </monitor-run-task>
</monitor>
